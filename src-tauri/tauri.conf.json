{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cerebro",
  "version": "0.1.0",
  "identifier": "com.genoalabs.cerebro",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "cerebro",
        "width": 400,
        "height": 700,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "dragDropEnabled": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "py/*",
      "py/**/*"
    ]
  }
}
